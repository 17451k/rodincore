<?xml version="1.0" encoding="UTF-8"?>
<?pde version="3.2"?>

<product name="%productName" id="org.rodinp.platform.product" application="org.eclipse.ui.ide.workbench" useFeatures="true">

   <aboutInfo>
      <image path="/org.rodinp.platform/icons/about.gif"/>
      <text>
         %aboutText
      </text>
   </aboutInfo>

   <configIni use="default"/>

   <launcherArgs>
      <vmArgs>-Xmx512m</vmArgs>
   </launcherArgs>

   <windowImages small="/org.rodinp.platform/icons/rodin16.gif" large="/org.rodinp.platform/icons/rodin32.gif"/>


   <launcher name="rodin">
      <linux icon="/org.rodinp.platform/rodin32.xpm"/>
      <macosx icon="/org.rodinp.platform/rodin.icns"/>
      <solaris/>
      <win useIco="false">
         <bmp/>
      </win>
   </launcher>

   <plugins>
   </plugins>

   <features>
      <feature id="com.b4free.rodin" version="0.7.2"/>
      <feature id="org.eventb.ide" version="0.7.2"/>
      <feature id="org.rodinp.platform" version="0.7.2"/>
   </features>

</product>
