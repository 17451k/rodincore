<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eventb.ui"
            class="org.eventb.internal.ui.proofskeleton.ProofSkeletonView"
            icon="icons/prf_tree.gif"
            id="org.eventb.ui.views.ProofSkeleton"
            name="%view.ProofSkeleton"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eventb.ui.perspective.proving">
         <view
               id="org.eventb.ui.views.ProofSkeleton"
               ratio="0.5"
               relationship="bottom"
               relative="org.eventb.ui.views.ProofTreeUI"/>
         <viewShortcut id="org.eventb.ui.views.ProofSkeleton"/>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.eventb.ui.ProofSkeleton.toolbar"
            targetID="org.eventb.ui.views.ProofSkeleton">
         <action
               class="org.eventb.internal.ui.proofskeleton.ProofSkeletonCollapseAllAction"
               icon="icons/collapseall.gif"
               id="org.eventb.ui.views.ProofSkeleton.toolbar.collapseAll"
               label="%action.CollapseAll.label"
               toolbarPath="navigationGroup">
         </action>
         <action
               class="org.eventb.internal.ui.proofskeleton.ProofSkeletonExpandAllAction"
               icon="icons/expandall.gif"
               id="org.eventb.ui.views.ProofSkeleton.toolbar.expandAll"
               label="%action.ExpandAll.label"
               toolbarPath="navigationGroup">
         </action>
      </viewContribution>
   </extension>

</plugin>
