<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="fr.systerel.editor.editors.RodinEditor"
            default="true"
            extensions="bum, buc"
            icon="icons/full/clcl16/b_file.gif"
            id="fr.systerel.editor.editors.RodinEditor"
            name="%editorName">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.systerel.editor.handlers.CopyHandler"
            commandId="org.eclipse.ui.edit.copy">
         <activeWhen>
            <with
                  variable="activeFocusControlId">
               <equals
                     value="fr.systerel.editor.editors.RodinEditor.editorText">
               </equals>
            </with></activeWhen>
      </handler>
      <handler
            class="fr.systerel.editor.handlers.PasteHandler"
            commandId="org.eclipse.ui.edit.paste">
         <activeWhen>
            <with
                  variable="activeFocusControlId">
               <equals
                     value="fr.systerel.editor.editors.RodinEditor.editorText">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="fr.systerel.editor.handlers.CutHandler"
            commandId="org.eclipse.ui.edit.cut">
         <activeWhen>
            <with
                  variable="activeFocusControlId">
               <equals
                     value="fr.systerel.editor.editors.RodinEditor.editorText">
               </equals>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.extension_parser">
      <parser
            class="org.rodinp.core.emf.lightcore.RodinResourceFactory"
            type="ebuc">
      </parser>
      <parser
            class="org.rodinp.core.emf.lightcore.RodinResourceFactory"
            type="ebum">
      </parser>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="fr.systerel.editor.editionCategory"
            defaultHandler="fr.systerel.editor.handlers.AddChildHandler"
            id="fr.systerel.editor.addChild"
            name="Add Child Command">
      </command>
      <command
            categoryId="fr.systerel.editor.editionCategory"
            defaultHandler="fr.systerel.editor.handlers.RemoveHandler"
            id="fr.systerel.editor.removeElement"
            name="Remove">
      </command>
      <command
            categoryId="fr.systerel.editor.editionCategory"
            defaultHandler="fr.systerel.editor.handlers.AddSiblingHandler"
            id="fr.systerel.editor.addSibling"
            name="Add Sibling">
      </command>
      <category
            id="fr.systerel.editor.editionCategory"
            name="Model Edition Commands">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:fr.systerel.editor.editors.RodinEditor?before=additions">
         <command
               commandId="fr.systerel.editor.addChild"
               label="Add Child"
               style="push">
         </command>
         <command
               commandId="fr.systerel.editor.addSibling"
               label="Add Sibling"
               style="push">
         </command>
         <command
               commandId="fr.systerel.editor.removeElement"
               label="Remove"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
