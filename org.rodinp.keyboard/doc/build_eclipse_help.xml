<?xml version="1.0" encoding="utf-8" ?>

<project name="keyboard-help" default="keyboard-help.generate">
	
	<dirname property="tool.dir" file="${ant.file.keyboard-help}"/>

     <target name="keyboard-help.generate">
        <ant dir="../../org.eventb.doc.user/tools/wiki2help/"
        	 antfile="build_eclipse_help.xml" target="generate-help"
        	 inheritAll="false">
           <property name="dest.dir" value="${tool.dir}"/>
           <property name="wiki.domain" value="http://wiki.event-b.org"/>
           <property name="wiki.page" value="Rodin_Keyboard_User_Guide"/>
           <property name="help.title" value="Rodin Keyboard User Guide"/>
     	</ant>
    </target>

</project>