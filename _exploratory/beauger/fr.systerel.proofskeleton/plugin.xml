<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name"
            category="org.eventb.ui"
            icon="icons/prf_tree.gif"
            class="org.eventb.ui.proofskeleton.ProofSkeletonView"
            id="proofSkeletonView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="proofSkeletonView">
         </view>
         <viewShortcut
               id="proofSkeletonView">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.eventb.ui.proofskeleton.toolbar"
            targetID="proofSkeletonView">
         <action
               class="org.eventb.ui.proofskeleton.ProofSkeletonCollapseAllAction"
               icon="icons/collapseall.gif"
               id="org.eventb.ui.proofskeleton.toolbar.collapseAll"
               label="%action.collapseall.label"
               toolbarPath="navigationGroup">
         </action>
         <action
               class="org.eventb.ui.proofskeleton.ProofSkeletonExpandAllAction"
               icon="icons/expandall.gif"
               id="org.eventb.ui.proofskeleton.toolbar.expandAll"
               label="%action.expandall.label"
               toolbarPath="navigationGroup">
         </action>
      </viewContribution>
   </extension>

</plugin>
