<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eventb.ui.perspective.eventb">
         <viewShortcut
               id="org.rodinp.keyboard.ui.views.KeyboardView">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eventb.ui.perspective.proving">
         <viewShortcut
               id="org.rodinp.keyboard.ui.views.KeyboardView">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.themes">
      <themeElementCategory
            id="org.rodinp.keyboard.ui.presentation"
            label="%rodinPresentation.label">
      </themeElementCategory>
      <fontDefinition
            categoryId="org.rodinp.keyboard.ui.presentation"
            defaultsTo="org.rodinp.keyboard.ui.braveSansMono"
            id="org.rodinp.keyboard.ui.textFont"
            isEditable="true"
            label="%rodinKeyboardFontDefinition.label">
         <description>
            %rodinKeyboardFontDefinition.description
         </description>
      </fontDefinition>
      <fontDefinition
            id="org.rodinp.keyboard.braveSansMono"
            isEditable="false"
            label="%rodinKeyboardBraveSansMono.label"
            value="Brave Sans Mono-regular-10">
         <description>
            %rodinKeyboardBraveSansMono.description
         </description>
      </fontDefinition>
   </extension>

</plugin>
